<div class= "container">
  <hr>

<% flash.each do |key, value| %>
  <%if key =="error"%>
   <% key ="danger"%>
  <%end%>
  <div class="alert alert-<%= key %>"><%= value %></div>

<% end %>

  <h3> <strong> Title: </strong><%= link_to @booking.listing.title, listing_path(@booking.listing, @booking)%></h3>
  <h5> <small class="text-muted"><strong> Posted by </strong><%=@booking.listing.host.email%></small></h5>

  <strong> Description:</strong> <%=@booking.listing.description%>
  <br/>
  <br/>
  <div class ="container">
  <div class="row">
    <div class ="col-{breakpoint}-auto mr-4">
    <strong>Start Date:</strong> <%=@booking.start_date%>
    </div>
    <div class ="col-{breakpoint}-auto ">
    <strong>End Date:</strong> <%=@booking.end_date%> 
    </div>
  </div>
</div>
<br/>

  <%= button_to 'Destroy', listing_booking_path(@booking.listing, @booking), :class=>"btn btn-danger",
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
  <hr> 
  <small class="text-muted"><strong> created at </strong><%=@booking.created_at%></small> 
  <br/>
  <small class="text-muted"><strong> Updated at </strong><%=@booking.updated_at%></small> 
  <br/>

</div>

