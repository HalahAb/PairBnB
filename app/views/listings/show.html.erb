<div class= "container mb-5">
  <hr>

  <h3> <strong> Title:</strong> <%=@listing.title%></h3>
  <h5> <small class="text-muted"><strong> Posted by </strong><%=@listing.host.email%></small></h5>
  <hr>


 

<%if @listing.listing_images !=[]%>
  <div class="row mb-5">
    <div class="col-2">
    </div>

    <div class="col">
          <div id="carouselExampleIndicators" class="carousel slide"  data-ride="carousel" style=" width:100%;height:100%;" >
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">

              <% @listing.listing_images.each do |image| %>
                 <div class="carousel-item <%= 'active' if image == @listing.listing_images[0] %>" >
                    <%= image_tag image.url.to_s, class:"d-block w-100", style:"height: 100%; width:100%;
              object-fit: contain;"%>
                </div>
              <%end%>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

      </div>

    <div class="col-2">
    </div>

  </div>
 <hr>
<%end%>


<div class="row">
<div class="col">
    <p class= "card-text"> <strong> Location:</strong> <%=@listing.location%> <br/>
     <strong> Price per day:</strong> $ <%=@listing.price%><br/>
    <strong> Description:</strong> <%=@listing.description%></p> <br/>
      <hr>
       <strong> Amenities: </strong>
      <hr>
          <%@amenities.each do |key, value|%>
            <strong>  âœ“  <%= key.to_s.humanize  %> </strong> <br/>

          <%end%>
</div>
 



</div>



    <br/>
    <br/>
    <div class ="row">
      &nbsp &nbsp 

      
      <% if @listing.host == current_user %>
        <%=button_to "Edit listing", edit_listing_path(@listing), :class=>"btn btn-warning",:method => "get"%>
      &nbsp 
        <%=button_to 'Destroy', listing_path(@listing), :class=>"btn btn-danger",
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
      <% else %>
        <%=button_to "Book Now!", new_listing_booking_path(@listing),:class=>"btn btn-success",:method => "get"%>
      <%end%>

    </div>
  <hr> 
  <small class="text-muted"><strong> Created at:  </strong><%=@listing.created_at%></small> 
  <br/>
  <small class="text-muted"><strong> Updated at:  </strong><%=@listing.updated_at%></small> 
  <br/>
</div>













